{
	"manifest_version": 2,

	"name": "OldTabs",
	"description": "Manage old tabs",
	"version": "0.1.0",

	"homepage_url": "https://github.com/duncantl/OldTabs",

	"permissions": [
	    "tabs",
	    //	    "activeTab",
	    "<all_urls>",
	    "storage",
	    "scripting"
	],

       "browser_action": {
	   "default_title": "Old Tabs",
	   "default_popup": "oldtab.html"
       },

       "background": { 
           "scripts": ["background.js"],
	   "persistent": true
       }

}
